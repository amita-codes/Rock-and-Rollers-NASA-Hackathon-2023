<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="#EAD7AA" >

    <TextView
        android:id="@+id/home_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:text="@string/wildfire_awareness_and_reporting"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/wildfires_101_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="105dp"
        android:text="@string/wildfires_101"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/climate_change_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginStart="105dp"
        android:text="@string/climate_change"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/procedures_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="105dp"
        android:text="@string/wildfire_procedures"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/report_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:layout_marginStart="105dp"
        android:text="@string/report_a_fire"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>